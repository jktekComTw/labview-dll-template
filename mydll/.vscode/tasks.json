{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build DLL",
            "type": "shell",
            "command": "mkdir -p build && /mingw64/bin/g++ -shared -o build/mydll.dll src/mydll.cpp -Iinclude -DMYDLL_EXPORTS -Wl,--out-implib,build/libmydll.a",
            "options": {
                "shell": {
                    "executable": "C:\\msys64\\usr\\bin\\bash.exe",
                    "args": ["-lc"]
                },
                "cwd": "${workspaceFolder}",
                "env": {
                    "MSYSTEM": "MINGW64",
                    "CHERE_INVOKING": "1"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "echo": true
            }
        },
        {
            "label": "Build Test",
            "type": "shell",
            "command": "/mingw64/bin/g++ test/main.cpp -o build/test.exe -Iinclude -Lbuild -lmydll",
            "options": {
                "shell": {
                    "executable": "C:\\msys64\\usr\\bin\\bash.exe",
                    "args": ["-lc"]
                },
                "cwd": "${workspaceFolder}",
                "env": {
                    "MSYSTEM": "MINGW64",
                    "CHERE_INVOKING": "1"
                }
            },
            "group": "build",
            "problemMatcher": ["$gcc"],
            "dependsOn": ["Build DLL"],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Run Test",
            "type": "shell",
            "command": "./build/test.exe",
            "options": {
                "shell": {
                    "executable": "C:\\msys64\\usr\\bin\\bash.exe",
                    "args": ["-lc"]
                },
                "cwd": "${workspaceFolder}",
                "env": {
                    "MSYSTEM": "MINGW64",
                    "CHERE_INVOKING": "1"
                }
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [],
            "dependsOn": ["Build Test"],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true
            }
        }
    ]
}